<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <Target Name="EmbedChecksDiagnostics" AfterTargets="Build">
        <Exec Command="$(MSBuildThisFileDirectory)..\tools\PostBuildUtil.exe $(MSBuildProjectDirectory) $(TargetPath)" />
    </Target>
  <ItemGroup Condition="'$(Configuration)' == 'Debug'">
    <Reference Include="zChecks">
      <HintPath>$(MSBuildThisFileDirectory)..\lib\net40\debug\zChecks.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup Condition="'$(Configuration)' == 'Release'">
    <Reference Include="zChecks">
      <HintPath>$(MSBuildThisFileDirectory)..\lib\net40\release\zChecks.dll</HintPath>
    </Reference>
  </ItemGroup>
</Project>